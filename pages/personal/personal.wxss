.userinfo{
  width: 100%;
  height: 380rpx;
  padding-top: 110rpx;
  padding-left: 40rpx;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  position: relative;
  background: url(http://ol58x6i5t.bkt.clouddn.com/images/app/personal.png);
}
.userinfo image{
  width: 160rpx;
  height: 160rpx;
  border-radius: 100%;
}
.userinfo view{
  display: inline-block;
}
.userinfo .username{
  position: absolute;
  top: 100rpx;
  left: 230rpx;
}
.userinfo .username text{
  font-size: 38rpx;
  color: white;
}
.userinfo .something{
  position: absolute;
  top: 210rpx;
  left: 230rpx;
}
.userinfo .something view{
  background-color: rgba(0,0,0,0.3);
  height: 50rpx; 
  margin-right: 14rpx;
  border-radius: 40rpx;
  width: 180rpx;
  position: relative;
}
.userinfo .something image{
  width: 34rpx;
  height: 34rpx;
  position: absolute;
  top:8rpx;
  left:8rpx;
}
.userinfo .something text{
  display: block;
  color: white;
  font-size: 24rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-weight: lighter;
  position: absolute;
  top: 2rpx;
  left: 50rpx;
}
.order{
  background-color: white;
  padding: 20rpx 0;
  margin: 20rpx 0;
}
.order .firstLine{
  padding: 0 20rpx;
  border-bottom: 2rpx solid #eee;
}
.order .firstLine .all{
  float: right;
  font-size: 28rpx;
  color: #888;
}
.flex-wrp{
  display: flex;
}
.flex-wrp view{
  width: 33.3%;
  height: 100rpx;
  flex:1;
  padding: 20rpx 5%;
  text-align: center;
  background: white;
  font-size: 30rpx; 
}
.flex-wrp view image{
  width: 75rpx;
  height: 75rpx;
  display: block;
  margin: 0 auto;
  margin-bottom: 16rpx;
}
.servies{
  background-color: white;
}
.servies>view{
  width: 96%;
  padding-left: 4%;
  height: 100rpx;
  line-height: 100rpx;
  position: relative;
}
.servies .img_view{
  border: none;
  width: 13%;
  height: 100rpx;
  position: absolute;
  top: 4%;
  left: 0;
}
.servies image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 30rpx;
  left: 50%;
  margin-left: -20rpx;
}
.servies view view{
  width: 87%;
  height: 100rpx;
  display: inline-block;
  border-bottom: 2rpx solid #eee;
  font-size: 32rpx;
  position: absolute;
  top: 0;
  left: 13%;
}
.servies view view text{
  float: right;
  font-size: 38rpx;
  color: #888;
  margin-right: 20rpx;
}