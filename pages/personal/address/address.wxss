page{
  background-color: white;
}
.content{
  padding: 30rpx 40rpx;
}
button{
  width: 100%;
  background-color: red;
  color: white;
  margin-top: 70rpx;
}
.address_list{
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  position: relative;
}
.address_list text{
  display: block;
  height: 50rpx;
  line-height: 50rpx;
}
.address_list text.bottom{
  font-size: 30rpx;
  color: #888;
  opacity: 0.8;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.choose{
  width: 100%;
  height: 140rpx;
  position: absolute;
  top: 10rpx;
  left: -40rpx;
  z-index: 10;
  padding-right: 40rpx;
}
.choose text.triangle{
  width: 0;
  height: 0;
  border-top: 42rpx solid red;
  border-right: 42rpx solid transparent;
}
.choose text.right{
  color: white;
  font-size: 22rpx;
  position: absolute;
  top: 0;
  left:0;
  height:42rpx;
  line-height:42rpx;
}
.addNew{
  position: fixed;
  bottom: 0;
  right: 0;
  border-radius: 0;
}
.content text.left{
  display: inline-block;
  width: 28%;
}
.content input.right{
  display: inline-block;
  height: 100rpx;
  line-height: 100rpx;
  overflow:visible;
}
textarea{
  height: 160rpx;
  padding: 20rpx 0;
}
.textarea-placeholder{
  font-size: 33rpx;
  color: rgb(209,209,209);
}
.input-placeholder{
  font-size: 33rpx;
  opacity: 0.4;
}
form view{
  border-bottom: 1rpx solid #eee;
}
.position{
  position: relative;
}
.position image{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  right: 0;
  top: 9rpx;
}
.del{
  display: block;
  width: 100%;
  text-align: right;
  color: red;
}
.modify{
  margin-top: 35rpx;
}