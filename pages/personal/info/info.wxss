.section{
  padding: 30rpx 20rpx;
}
.section>view{
  margin-bottom: 14rpx;
}
.section .left{
  width: 28%;
  display: inline-block;
  text-align: right;
}
.section .right{
  display: inline-block;
  padding-left: 20rpx;
}
.section input.right{
  border: 1px solid rgb(200,200,200);
  border-radius: 12rpx;
  height: 80rpx;
  line-height: 80rpx;
  overflow:visible;
  padding-right: 0!important;
}
.section button{
  margin-top: 70rpx;
  background-color: red;
  color: white;
}
textarea{
  width: 58%;
  height: 160rpx;
  margin-top: 30rpx;
  border: 1px solid rgb(200,200,200);
  border-radius: 12rpx;
  position: absolute;
  left: 28%;
  top: 0;
}
.textarea-placeholder{
  font-size: 33rpx;
}
.textarea{
  position: relative;
  height: 200rpx;
}
.textarea text{
  position: absolute;
  left: 0;
  top: 0;
}