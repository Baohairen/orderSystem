/**index.wxss**/
swiper-item image{
	width: 100%;
	height: 100%;
}
.flex-wrp{
	display: flex;
}
.flex-wrp view{
	width: 50%;
	height: 200rpx;
	flex:1;
	padding: 20rpx 10%;
	text-align: center;
	border-right:2rpx solid #eee;
	border-bottom:2rpx solid #eee;
	background: white;
	color: #666;  
}
.flex-wrp view image{
	width: 150rpx;
	height: 150rpx;
	display: block;
	margin: 0 auto;
	margin-bottom: 10rpx;
}
.info{
	width: 100%;
	background: white;
	margin: 30rpx 0;
}
.infos{
	border-bottom:2rpx solid #eee;
	display: flex;
	position: relative;
}
.infos .infoLeft{
	width: 25%;
	text-indent: 16rpx;
}
.firstLine{
	font-weight: bold;
	font-size: 38rpx;
	height: 100rpx;
	line-height: 100rpx;
}
.infos .infoRight{
	width: 72%;
}
.infos .litte_img{
	width: 50rpx;
	height: 50rpx;
	position: absolute;
	top: 25rpx;
	right: 20rpx;
	padding-left: 68%;
}
.comment{
	width: 100%;
	background: white;
	padding: 0 20rpx;
	box-sizing:border-box;
	margin-bottom: 30rpx;
}
.comment .more{
	float: right;
	margin-right: 20rpx;
}
.person{
	border-top: 2rpx solid #eee;
}
.person view{
	font-size: 32rpx;
	margin-bottom: 10rpx;
}
.person .time{
	display: block;
	text-align: right;
	height: 60rpx;
	line-height: 60rpx;
}